#!/bin/bash

# Build ROOT and friends

# REQUIRED

# Where things are or to be installed
grinst_target=$HOME/opt

# list of packages
grinst_packages="cmake python ipython gccxml root"

# each package needs a _version variable
cmake_version=2.8.10.2
python_version=2.7.3
ipython_version=0.13.1
gccxml_version=0.9.0_20120309
root_version=5.34.03


## OPTIONAL

# parallel make
grinst_parallel=-j8
